{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
    <div class="container">
        <h2>Produits finis</h2>
        <table id="product-table" class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ref</th>
                    <th>Nom</th>
                    <th>Saison</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Editer</th>
                    <th>Supprimer</th>
                 </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td><p>{{ product.id }}</p></td>
                        <td><p>{{ product.ref }}</p></td>
                        <td><p>{{ product.name }}</p></td>
                        <td><p>{{ product.season }}</p></td>
                        <td><p>{{ product.price }}€</p></td>
                        <td><p>{{ product.number }}</p></td>
                        <td><p style="font-weight: bold;">{{ product.price * product.number }}€</p></td>
                        <td>
                            <a href="{{ path('product_edit', {'id':product.id}) }}">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('product_delete', {'id':product.id}) }}">
                                <i class="glyphicon glyphicon-remove" style="color: red;"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <hr>

    <a href="{{ path('product_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Ajouter un produit</a>

    <div>
        <div class="col-md-12">
            <table class="table table-striped table-hover table-responsive">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Référence</th>
                        <th>Nom</th>
                        <th>Saison</th>
                        <th>Prix HT/€</th>
                        <th>Quantité</th>
                        <th>Total HT/€</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td><input type="text" value="{{ product.ref }}" class="form-control" placeholder="Référence" min=0></td>
                        <td><input type="text" value="{{ product.name }}" class="form-control" placeholder="Nom"></td>
                        <td><input type="text" value="{{ product.season }}" class="form-control" placeholder="Saison"></td>
                        <td><input type="number" value="{{ product.price }}" class="form-control bfh-number" min=0></td>
                        <td><input type="number" value="{{ product.number }}" class="form-control bfh-number" min=0></td>
                        <td>{{ product.price * product.number }}</td>
                        <td>
                            <a href="{{ path('product_delete', {'id':product.id}) }}">
                                <i class="glyphicon glyphicon-remove" style="color: red;"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                <tr class="success">
                    <th class="success">TOTAL</th>
                    <td class="success"></td>
                    <td class="success"></td>
                    <td class="success"></td>
                    <td class="success">€</td>
                    <td class="success"></td>
                    <td class="success">€</td>
                    <td class="success"></td>
                </tr>
            </table>
            <a href="{{ path('product_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Ajouter un produit</a>
        </div>
    </div>
{% endblock %}
