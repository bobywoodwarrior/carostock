{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
    <h1>Products</h1>


    {% for product in products %}

        <p>{{ product.id }} | {{ product.name }} | {{ product.price }}€ | Quantité : {{ product.number }}</p>

    {% endfor %}

    <hr>
    <a href="{{ path('product_add') }}" class="btn btn-primary">Ajouter un produit</a>
    <a href="{{ path('product_edit') }}" class="btn btn-primary">Editer un produit</a>
    <a href="{{ path('product_delete') }}" class="btn btn-primary">Supprimer un produit</a>
{% endblock %}
