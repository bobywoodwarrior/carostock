{% extends "@ValentinStock/_layout.html.twig" %}

{% block main %}
<div class="container">
    <h2>Material Quantity</h2>
    <table id="product-table" class="table table-striped table-hover table-responsive">
        <thead>
        <tr>
            <th>#</th>
            <th>Quantity</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for quantity in quantities %}
            <tr>
                <td><a href="{{ path('product_model_edit', {'id' : quantity.productmodel.id}) }}">{{ quantity.id }}</a></td>
                <td>{{ quantity.quantity }}</td>
                <td>
                    <a href="{{ path('material_quantity_edit', {'id':quantity.id}) }}">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('material_quantity_delete', {'id':quantity.id}) }}">
                        <i class="glyphicon glyphicon-trash" style="color: red;"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<a href="{{ path('material_quantity_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add quantity</a>
{% endblock %}
