{% extends "@ValentinStock/_layout.html.twig" %}

{% block main %}

<div class="container">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('homepage') }}">Home</a></li>
            <li class="active"><a href="{{ path('material_kind_index') }}">Material Types</a></li>
        </ol>
        <div class="well header-page">
            <div class="row">
                <div class="col-md-8">
                    <h2>Material Types</h2>
                </div>
                <div class="col-md-4">
                <span class="pull-right">
                    <a href="{{ path('material_kind_new') }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> New material type</a>
                </span>
                </div>
            </div>
        </div>

    {% if kinds %}
    <table id="product-table" class="table table-striped table-hover table-responsive">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Unit</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for kind in kinds %}
            <tr>
                <td>{{ kind.id }}</td>
                <td>{{ kind.name }}</td>
                <td>{{ kind.unit }}</td>
                <td>
                    <a href="{{ path('material_kind_edit', {'id':kind.id}) }}">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('material_kind_delete', {'id':kind.id}) }}">
                        <i class="glyphicon glyphicon-trash" style="color: red;"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        {% else %}
            <div class="alert alert-warning">
                <i class="glyphicon glyphicon-info-sign"></i>
                No material types recorded yet.
            </div>
        {% endif %}
</div>
{% endblock %}
