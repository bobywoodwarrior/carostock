{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
<div class="container">
    <h2>Material Types</h2>
    <table id="product-table" class="table table-striped table-hover table-responsive">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Unit Price</th>
            <th>Unit</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for kind in kinds %}
            <tr>
                <td>{{ kind.id }}</td>
                <td>{{ kind.name }}</td>
                <td>{{ kind.unit }}</td>
                <td>{{ kind.unitprice }} â‚¬</td>
                <td>
                    <a href="{{ path('material_kind_edit', {'id':kind.id}) }}">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('material_kind_delete', {'id':kind.id}) }}">
                        <i class="glyphicon glyphicon-remove" style="color: red;"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<a href="{{ path('material_kind_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add type</a>
{% endblock %}