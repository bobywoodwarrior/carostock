{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
    <div class="container">
        <h2>Production</h2>
        <table id="product-table" class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Reference</th>
                    <th>Product Model</th>
                    <th>Name</th>
                    <th>Season</th>
                    <th>Price Whole Sale</th>
                    <th>Total</th>
                    <th>Edit</th>
                    <th>Delete</th>
                 </tr>
            </thead>
            <tbody>
                {% for production in productions %}
                    <tr>
                        <td>{{ production.id }}</td>
                        <td>{{ production.productModel.reference }}</td>
                        <td>{{ production.productModel.name }}</td>
                        <td>{{ production.name }}</td>
                        <td>{{ production.season }}</td>
                        <td>{{ production.priceWhole }} €</td>
                        <td>{{ production.priceWhole }}€</td>
                        <td>
                            <a href="{{ path('production_edit', {'id':production.id}) }}">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('production_delete', {'id':production.id}) }}">
                                <i class="glyphicon glyphicon-remove" style="color: red;"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <hr>

    <a href="{{ path('production_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add production</a>

