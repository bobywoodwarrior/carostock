{% extends "@ValentinStock/_layout.html.twig" %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Home</a></li>
        <li class="active"><a href="{{ path('production_index') }}">Productions</a></li>
    </ol>
    <div class="well header-page">
        <div class="row">
            <div class="col-md-8">
                <h2>Productions</h2>
            </div>
            <div class="col-md-4">
                <span class="pull-right">
                    <a href="{{ path('production_new') }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> New production</a>
                </span>
            </div>
        </div>
    </div>


    {% if productions %}

        <table id="product-table" class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Reference</th>
                    <th>Product Model</th>
                    <th>Name</th>
                    <th>Season</th>
                    <th>Price Whole Sale</th>
                    <th>Total</th>
                    <th>Edit</th>
                    <th>Delete</th>
                 </tr>
            </thead>
            <tbody>
                {% for production in productions %}
                    <tr>
                        <td>{{ production.id }}</td>
                        <td>{{ production.productModel.reference }}</td>
                        <td>{{ production.productModel.name }}</td>
                        <td>{{ production.name }}</td>
                        <td>{{ production.season.name }}</td>
                        <td>{{ production.priceWhole }} €</td>
                        <td>{{ production.priceWhole }}€</td>
                        <td>
                            <a href="{{ path('production_edit', {'id':production.id}) }}">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('production_delete', {'id':production.id}) }}">
                                <i class="glyphicon glyphicon-trash" style="color: red;"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    {% else %}
        <div class="alert alert-warning">
            <i class="glyphicon glyphicon-info-sign"></i>
            No productions recorded yet.
        </div>
    {% endif %}
{% endblock %}
