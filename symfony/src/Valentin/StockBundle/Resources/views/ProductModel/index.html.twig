{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
<div class="container">
    <h2>Product Models</h2>
    <table id="product-table" class="table table-striped table-hover table-responsive">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.name }}</td>
                <td>
                    <a href="{{ path('product_model_edit', {'id':model.id}) }}">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('product_model_delete', {'id':model.id}) }}">
                        <i class="glyphicon glyphicon-remove" style="color: red;"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<a href="{{ path('product_model_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add product model</a>
{% endblock %}