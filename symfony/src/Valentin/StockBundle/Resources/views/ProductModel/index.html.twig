{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
    <div class="container">
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Home</a></li>
        <li class="active"><a href="{{ path('product_model_index') }}">Product Models</a></li>
    </ol>
    <div class="well header-page">
        <div class="row">
            <div class="col-md-8">
                <h2>Product Models</h2>
            </div>
            <div class="col-md-4">
                <span class="pull-right">
                    <a href="{{ path('product_model_new') }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> New product model</a>
                </span>
            </div>
        </div>
    </div>

    <table id="product-table" class="table table-striped table-hover table-responsive">
        <thead>
        <tr>
            <th>#</th>
            <th>Reference</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.reference }}</td>
                <td>{{ model.name }}</td>
                <td>
                    <a href="{{ path('product_model_edit', {'id':model.id}) }}">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('product_model_delete', {'id':model.id}) }}">
                        <i class="glyphicon glyphicon-trash" style="color: red;"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}