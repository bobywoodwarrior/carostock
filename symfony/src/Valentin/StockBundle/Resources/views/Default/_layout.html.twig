<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>Carostock</title>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% stylesheets 'bundles/valentinstock/assets/css/style.css' filter="cssrewrite" %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    </head>
    <body style="width: 800px;">
        <header>
            <ul class="nav nav-pills">
                <li role="presentation" class="active"><a href="#">Base de données</a></li>
                <li role="presentation"><a href="http://www.carolinaritz.com" onclick="window.open(this.href); return false;">Site</a></li>
            </ul>
        </header>

        {% block main %}
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="alert alert-dismissible alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}
    </body>

    {% javascripts '@ValentinStockBundle/Resources/public/assets/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
</html>
