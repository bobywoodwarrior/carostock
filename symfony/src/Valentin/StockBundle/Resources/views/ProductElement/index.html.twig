{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
    <div class="container">
        <h2>Matières Premières en stock</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Quantité</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td><p>{{ product.id }}</p></td>
                    <td><p>{{ product.name }}</p></td>
                    <td><p>{{ product.price }}€</p></td>
                    <td><p>{{ product.number }}</p></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <hr>

    <a href="{{ path('product_new') }}" class="btn btn-primary">Ajouter une matière première</a>
{% endblock %}