{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
    <div class="container">
        <h2>Materials</h2>
        <table id="product-table" class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Reference</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Color</th>
                    <th>Quantity</th>
                    <th>Quantity Used</th>
                    <th>Unit Price</th>
                    <th>Type</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            {% for material in materials %}
                <tr>
                    <td>{{ material.id }}</td>
                    <td>{{ material.reference }}</td>
                    <td>{{ material.name }}</td>
                    <td>{{ material.brand }}</td>
                    <td>{{ material.color }}</td>
                    <td>{{ material.quantity }}</td>
                    <td>{{ material.quantityUsed }}</td>
                    <td>{{ material.price }} â‚¬</td>
                    <td>{{ material.materialkind.name }}</td>
                    <td>
                        <a href="{{ path('material_edit', {'id':material.id}) }}">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('material_delete', {'id':material.id}) }}">
                            <i class="glyphicon glyphicon-remove" style="color: red;"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('material_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add material</a>
{% endblock %}
