{% extends "ValentinStockBundle:Default:_layout.html.twig" %}

{% block main %}
    <div class="container">
        <h2>Material Type</h2>
        <table id="product-table" class="table table-striped table-hover table-responsive">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Unit</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <td><p>{{ type.id }}</p></td>
                    <td><p>{{ type.name }}</p></td>
                    <td><p>{{ type.unit }}</p></td>
                    <td>
                        <a href="{{ path('material_type_delete', {'id':type.id}) }}">
                            <i class="glyphicon glyphicon-remove" style="color: red;"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('material_type_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add type</a>
{% endblock %}
