{% extends "@ValentinStock/_layout.html.twig" %}

{% block main %}

    <div class="container">
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">Home</a></li>
                <li class="active"><a href="{{ path('material_index') }}">Materials</a></li>
            </ol>
            <div class="well header-page">
                <div class="row">
                    <div class="col-md-8">
                        <h2>Materials</h2>
                    </div>
                    <div class="col-md-4">
                <span class="pull-right">
                    <a href="{{ path('material_new') }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> New material</a>
                </span>
                    </div>
                </div>
            </div>
        {% if materials %}
        <table id="product-table" class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Reference</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Color</th>
                    <th>Quantity</th>
                    <th>Quantity Used</th>
                    <th>Unit Price</th>
                    <th>Type</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            {% for material in materials %}
                <tr>
                    <td>{{ material.id }}</td>
                    <td>{{ material.reference }}</td>
                    <td>{{ material.name }}</td>
                    <td>{{ material.brand }}</td>
                    <td>{{ material.color }}</td>
                    <td>{{ material.quantity }}</td>
                    <td>{{ material.quantityUsed }}</td>
                    <td>{{ material.price }} â‚¬</td>
                    <td>{{ material.materialkind.name }}</td>
                    <td>
                        <a href="{{ path('material_edit', {'id':material.id}) }}">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('material_delete', {'id':material.id}) }}">
                            <i class="glyphicon glyphicon-trash" style="color: red;"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            {% else %}
                <div class="alert alert-warning">
                    <i class="glyphicon glyphicon-info-sign"></i>
                    No materials recorded yet.
                </div>
            {% endif %}

    </div>
{% endblock %}
