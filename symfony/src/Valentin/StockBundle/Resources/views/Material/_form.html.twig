{{ form_start(form) }}
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Material</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.materialKind) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.reference) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.quantity) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.brand) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.color) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.price) }}
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-4">
                <a href="{{ path('material_index') }}" class="btn btn-default btn-block">Annuler</a>
            </div>
            <div class="col-md-8">
                <button type="submit" class="btn btn-info btn-block">Save</button>
            </div>
        </div>
    </div>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
