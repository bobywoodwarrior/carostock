<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>Carostock</title>
        <meta charset="utf-8">
        <meta name="robots" content="noindex">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-touch-fullscreen" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

        {% stylesheets 'bundles/valentinstock/assets/css/*' filter="cssrewrite" %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% block stylesheets %}{% endblock %}

    </head>

    <body>
        <div class="container">

            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('homepage') }}">CAROSTOCK</a>
                    </div>
                    <div class="collapse navbar-collapse" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="{{ path('production_index') }}">
                                    <i class="glyphicon glyphicon-plane"></i> Productions
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('product_model_index') }}">
                                    <i class="glyphicon glyphicon-barcode"></i> Product Models
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('material_index') }}">
                                    <i class="glyphicon glyphicon-list"></i> Materials
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('material_kind_index') }}">
                                    <i class="glyphicon glyphicon-th-list"></i> Material Types
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('season_index') }}">
                                    <i class="glyphicon glyphicon-leaf"></i> Seasons
                                </a>
                            </li>
                            <li>
                                <a href="http://www.carolinaritz.com" target="_blank">
                                    <i class="glyphicon glyphicon-link"></i> Website
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#todo">
                                    <i class="glyphicon glyphicon-user"></i> Logout [username]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="alert alert-dismissible alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block main %}{% endblock %}
        </div>
    </body>

    {% block javascripts %}
        <script type="text/javascript">
            var site_url = "{{ url('homepage') }}";
        </script>
    {% endblock %}

    {% javascripts '@ValentinStockBundle/Resources/public/assets/js/jquery-2.1.4.min.js'
                    '@ValentinStockBundle/Resources/public/assets/js/bootstrap3.3.5.min.js'
                    '@ValentinStockBundle/Resources/public/assets/js/*'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

</html>
